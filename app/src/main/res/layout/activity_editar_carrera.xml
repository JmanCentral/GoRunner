<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarCarrera">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/txt_recorrido"
            android:textColor="#0f4d8b"
            android:textSize="25sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Nombre del recorrido"
            android:textColor="#0f4d8b" />

        <EditText
            android:id="@+id/titulo"
            android:layout_width="272dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:hint="Agrega un nombre"
            android:inputType="text"
            android:textColor="#0f4d8b" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Calificación"
            android:textColor="#0f4d8b" />

        <EditText
            android:id="@+id/calificacion"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Agrega una calificación de 1 a 5"
            android:inputType="number"
            android:textColor="#0f4d8b" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Comentarios"
            android:textColor="#0f4d8b" />

        <EditText
            android:id="@+id/comentario"
            android:layout_width="348dp"
            android:layout_height="169dp"
            android:layout_marginTop="36dp"
            android:gravity="top"
            android:hint="Agrega un comentario"
            android:inputType="text|textMultiLine"
            android:textColor="#0f4d8b"
            android:textColorLink="#0f4d8b" />

        <ImageView
            android:id="@+id/Fotico"
            android:layout_width="302dp"
            android:layout_height="231dp"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/icono" />


        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0f4d8b"
            android:onClick="CambiarImagen"
            android:text="Cambiar Imagen"
            android:layout_marginTop="12dp"
            android:textColor="#FFFF" />

        <Button
            android:id="@+id/button5"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:onClick="Guardar"
            android:padding="8dp"
            android:text="Guardar recorrido"
            android:textColor="#0f4d8b"
            android:theme="@style/FlatButton" />

    </LinearLayout>
</ScrollView>
