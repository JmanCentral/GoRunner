<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarCarrera"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Editar detalles del recorrido"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#0f4d8b" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Titulo de la caminata"
        android:textColor="#0f4d8b"
        android:textColorLink="#0f4d8b" />

    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Recorrido "
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Agrega un comentario a la caminata"
        android:textColor="#0f4d8b"
        android:textColorLink="#0f4d8b" />

    <EditText
        android:id="@+id/commentEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="What an amazing journey!"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Cambiar calificaciÃ³n (debe estar entre 1 y 5)"
        android:textColor="#0f4d8b" />

    <EditText
        android:id="@+id/ratingEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="3"
        android:inputType="number" />

    <ImageView
        android:id="@+id/journeyImg"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:srcCompat="@drawable/icono" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0f4d8b"
        android:onClick="CambiarImagen"
        android:text="Cambiar Imagen"
        android:textColor="#FFFF" />

    <Button
        android:id="@+id/button5"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:onClick="Guardar"
        android:padding="8dp"
        android:text="Guardar recorrido"
        android:textColor="#0f4d8b"
        android:theme="@style/FlatButton" />

</LinearLayout>