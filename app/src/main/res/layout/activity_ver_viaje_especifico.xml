<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".VerViajeEspecifico">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/viajeespecificorecorrido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:text="Viaje específico"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#0f4d8b"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />

            <ImageView
                android:id="@+id/Imagenviaje"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@+id/viajeespecificorecorrido"
                app:srcCompat="@drawable/icono"
                tools:layout_editor_absoluteX="0dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="578dp"
            android:layout_marginBottom="5dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/velociadpromedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:text="0.00 KM/H"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#0f4d8b"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView9"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/caloriasquemadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:text="0.00 CAL"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#0f4d8b"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView12"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/pasospromedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:text="0 pasos"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#0f4d8b"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView14"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/calificacionrecorrido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="68dp"
                android:text="3"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#0f4d8b"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv6"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/fecharecorrido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="20/01/2020"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#0f4d8b"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tiemporecorrido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:text="00:00:00"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#0f4d8b"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/ViewSingleJourney_duration"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/distanciarecorrido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:text="0.00 KM"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#0f4d8b"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv34"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/ViewSingleJourney_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:text="Tiempo"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#0f4d8b"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView14" />


            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="Fecha"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#0f4d8b"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ViewSingleJourney_duration" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:text="Velocidad promedio"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#0f4d8b"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv34" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:text="Calorias quemadas"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#0f4d8b"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:text="Pasos promedio"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#0f4d8b"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/tv34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="Distancia"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#0f4d8b"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="Calificación"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#0f4d8b"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="113dp"
                android:layout_height="22dp"
                android:layout_marginTop="16dp"
                android:text="Comentarios"
                android:textColor="#0f4d8b"
                android:textColorLink="#0f4d8b"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv6" />

            <TextView
                android:id="@+id/comentariosrecorrido"
                android:layout_width="259dp"
                android:layout_height="157dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:inputType="text|textMultiLine"
                android:text="No hay comentarios"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#0f4d8b"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:onClick="Editar"
            android:padding="8dp"
            android:text="Editar recorrido"
            android:background="#0f4d8b"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:theme="@style/FlatButton"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button6"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:onClick="Mapa"
            android:padding="8dp"
            android:text="Ver recorrido en el mapa"
            android:textColor="#0f4d8b"
            android:theme="@style/FlatButton" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>